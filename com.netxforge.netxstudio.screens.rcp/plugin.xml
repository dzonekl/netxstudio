<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="com.netxforge.netxstudio.screens.rcp.application"
         point="org.eclipse.core.runtime.applications">
      <application
            visible="true">
         <run
               class="com.netxforge.netxstudio.screens.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.netxforge.netxstudio.screens.rcp.Perspective"
            id="com.netxforge.netxstudio.screens.rcp.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.netxforge.netxstudio.screens.rcp.application"
            name="Screens">
         <property
               name="appName"
               value="Screens">
         </property>
      </product>
   </extension>
</plugin>
