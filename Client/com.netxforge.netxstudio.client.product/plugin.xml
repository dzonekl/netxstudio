<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
 <extension
         id="com.netxforge.netxstudio.client.product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.netxforge.netxstudio.ui.application"
            name="NetXStudio client product">
         <property
               name="windowImages"
               value="icons/Logo X 16.gif,icons/Logo X 32.gif,icons/Logo X 48.gif,icons/Logo X 64.gif,icons/Logo X 128.gif">
         </property>
         <property
               name="appName"
               value="NetXStudio">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="com.netxforge.netxstudio.client.product.intro">
      </intro>
      <introProductBinding
            introId="com.netxforge.netxstudio.client.product.intro"
            productId="com.netxforge.netxstudio.client.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            content="introContent.xml"
            id="com.netxforge.netxstudio.client.product.introConfigId"
            introId="com.netxforge.netxstudio.client.product.intro">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx"
                  style="content/shared.css">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         id="netxscript"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.netxforge.netxstudio.ui.application"
            name="NetXScript">
         <property
               name="appName"
               value="NetXScript">
         </property>
         <property
               name="windowImages"
               value="icons/Logo X 16.gif,icons/Logo X 32.gif,icons/Logo X 48.gif,icons/Logo X 64.gif,icons/Logo X 128.gif">
         </property>
         <property
               name="aboutImage"
               value="icons/Logo about 250-330.png">
         </property>
         <property
               name="aboutText"
               value="%aboutText">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="com.netxforge.netxstudio.client.product.splashHandlers.InteractiveSplashHandler"
            id="com.netxforge.netxstudio.client.product.splashHandlers.interactive">
      </splashHandler>
      <splashHandlerProductBinding
            productId="com.netxforge.netxstudio.client.product.netxscript"
            splashId="com.netxforge.netxstudio.client.product.splashHandlers.interactive">
      </splashHandlerProductBinding>
   </extension>
</plugin>
