               name="aboutImage"
               value="icons/Logo about 250-330.png">
         </property>
         <property
               name="aboutText"
               value="%aboutText">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupForegroundColor"
               value="CCCCCC">
         </property>
         <property
               name="startupMessageRect"
               value="18,170,445,20">
         </property>
         <property
               name="startupProgressRect"
               value="15,150,445,10">
