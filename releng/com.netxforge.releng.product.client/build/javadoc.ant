ANT Script to produce javadoc 
-->
<project>
	<target name="create.javadoc" description="Generate the JavaDoc for the sources">
		<echo message="javadoc source ${source}">
		</echo>
		<echo message="javadoc screens source ${source}/screens"/>
			
		<echo message="javadoc destination ${javadoc.output}">
		</echo>

		<echo message="target platform ${targetPlatformPath}">
		</echo>
		<!-- Provided as property when performing the action. -->
		<echo message="target platform ${target.platform}">
		</echo>
	
		<!-- A test property. -->
		
		<echo message="Test targetplatform path ${target.platform.test}"/>
		
		<!-- set target platform as classpath -->
		<path id="files-classpath">
			<!--
			<fileset dir="${targetPlatformPath}">
				<include name="*.jar" />
			</fileset>
			-->
			<fileset dir="${target.platform}">
				<include name="*.jar" />
			</fileset>
		</path>
		
		<!-- clean and create output location -->
		<delete dir="${javadoc.output}" />
		<mkdir dir="${javadoc.output}" />

		<!-- generate the javadoc 
		
		// problems determining the classpath. 
		classpathref="files-classpath"
		-->
		<javadoc destdir="${javadoc.output}"  maxmemory="1024m" source="1.6" useexternalfile="true" author="true" version="true" use="true" windowtitle="Documentation">
			<!-- link external APIs -->
			<link offline="false" href="http://java.sun.com/javase/6/docs/api/" />
			<link offline="false" href="http://www.osgi.org/javadoc/r4v42/" />
			<link offline="false" href="http://download.eclipse.org/modeling/emf/emf/javadoc/2.5.0/" />
			<!-- screens sources -->
			<fileset dir="${source}/screens/">
				<include name="**/*.java" />
				<exclude name="**/test/**" />
			</fileset>
			<bottom>
				<![CDATA[<i>Copyright Â© 2013 NetXForge</i>]]></bottom>
	</javadoc>
</target>
</project>